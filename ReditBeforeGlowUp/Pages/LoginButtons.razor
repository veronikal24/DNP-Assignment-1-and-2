
@using ReditBeforeGlowUp.Services
@namespace Login
@inject NavigationManager navMgr
@inject IAuthService authService
<h3>LoginButtons</h3>
<AuthorizeView>
    <Authorized>
        <img class="icon" src="~/wwwroot/css/img/Logout.png" @onclick="Logout"/>
    </Authorized>
    <NotAuthorized>
        <img class="icon" src="~/wwwroot/css/img/Login.png" @onclick="Login"/>
    </NotAuthorized>
</AuthorizeView>
@code {
    private void Login()
    {
        navMgr.NavigateTo("/Login");
    }

    private async Task Logout()
    {
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }
}